package View;

import java.awt.BorderLayout;
import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

import Dao.BranchDaoImpl;
import Dao.CustomerDaoImpl;
import Dao.LoanDaoImpl;
import Model.Branch;
import Model.Customer;
import Model.Loan;

public class LoanCreateForm extends BaseWindow {
	
	private JLabel loanAmount;
	private JTextField loanAmountField;
	
	private JLabel interestRateLabel;
	private JTextField interestRateField;
	
	private JLabel loanStartDateLabel;
	private JTextField loanStartDateLabelField;
	
	private JLabel loanEndDateLabel;
	private JTextField loanEndDateField;
	
	private JLabel customerLabel;
	private JComboBox<Customer> customerComboBoxField;
	
	private JLabel loanTypeLabel;
	private JComboBox<Loan> loanComboBoxField;
	
	private JButton createButton;
	private JButton cancelButton;
	
	private JPanel panel;
	private LoanDaoImpl loanDao;
	private CustomerDaoImpl customerDao;
	
	public LoanCreateForm() {
		initializeComponent();
	}
	
	public void initializeComponent() {
		
		loanDao = new LoanDaoImpl();
		customerDao = new CustomerDaoImpl();
		
		loanAmount = new JLabel("Loan Amount : ");
		loanAmountField = new JTextField();
		
		interestRateLabel = new JLabel("Interest Rate : ");
		interestRateField = new JTextField();
		
		loanStartDateLabel = new JLabel("Loan Start Date : ");
		loanStartDateLabelField = new JTextField();
		
		loanEndDateLabel = new JLabel("Loan End Date : ");
		loanEndDateField = new  JTextField();
		
		customerLabel = new JLabel("Customer : ");
		customerComboBoxField = new JComboBox<>(customerDao.getAll().toArray(new Customer[0]));
		
		loanTypeLabel = new JLabel("Loan : ");
		loanComboBoxField = new JComboBox<>(loanDao.getAll().toArray(new Loan[0]));
		
		createButton = new JButton("Register");
		cancelButton = new JButton("Cancel");
		
		panel = new JPanel();
		panel.setLayout(new GridLayout(10, 2));
		
		panel.add(loanAmount);
		panel.add(loanAmountField);
		panel.add(interestRateLabel);
		panel.add(interestRateField);
		panel.add(loanStartDateLabel);
		panel.add(loanStartDateLabelField);
		panel.add(loanEndDateLabel);
		panel.add(loanEndDateField);
		panel.add(customerLabel);
		panel.add(confirmloanEndDateField);
		panel.add(phoneNumberLabel);
		panel.add(phoneNumberField);
		panel.add(salaryLabel);
		panel.add(salaryField);
		panel.add(customerLabel);
		panel.add(customerComboBoxField);
		panel.add(loanTypeLabel);
		panel.add(loanComboBoxField);
		panel.add(createButton);
		panel.add(cancelButton);
		
		this.add(panel,BorderLayout.NORTH);
		prepareBaseWindow();
		
	}
	
	public String getFirstName() {
		return this.loanAmountField.getText();
	}
	
	public String getLastName() {
		return this.interestRateField.getText();
	}
	
	public String getEmail() {
		return this.loanStartDateLabelField.getText();
	}
	
	public String getPassword() {
		return new String(this.loanEndDateField.getPassword());
	}
	
	public String getConfirmPassword() {
		return new String(this.confirmloanEndDateField.getPassword());
	}
	
	public String getPhoneNumber() {
		return this.phoneNumberField.getText();
	}
	
	public String getPosition() {
		return (String)this.customerComboBoxField.getSelectedItem();
	}
	
	public int getBranchId() {
		Branch branch = (Branch)this.loanComboBoxField.getSelectedItem();
		return branch.getId();
	}
	
	public JButton getCreateButton() {
		return this.createButton;
	}
	
	public String getSalary() {
		return this.salaryField.getText();
	}
	
	public void addActionOnCreateButton() {
		this.createButton.addActionListener(e -> actionOfCreateButton());
	}
	
	public void actionOfCreateButton() {
		
	}
	
	public void prepareBaseWindow() {
		this.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
		this.setTitle("Employee Create Form");
		this.setSize(800,400);
		
	}

}
